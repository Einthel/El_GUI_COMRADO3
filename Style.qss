}
/* Повтор плейлиста */
QWidget#Music_player QToolButton#Repeat_ToolB[repeatMode="all"] {
    image: url(icons/System_Icon/repeat_on.png);
    /*background-color: rgba(52, 152, 219, 0.7); /* Синий фон для активного состояния */
}

/* Повтор одного трека */
QWidget#Music_player QToolButton#Repeat_ToolB[repeatMode="one"] {
    image: url(icons/System_Icon/repeat_on_1.png);
    /*background-color: rgba(52, 152, 219, 0.7); /* Синий фон для активного состояния */
}


/* Стиль для прогресс-бара (полосы прокрутки трека) */
QWidget#Music_player QProgressBar#Length_track_bar {
    background-color: #2c3e50;
    border: 1px solid #4a627a;
    border-radius: 5px;
    height: 10px; /* Уменьшаем высоту для тонкой полосы */
    text-align: center; /* Убираем отображение процентов */
}

QWidget#Music_player QProgressBar#Length_track_bar::chunk {
    background-color: #3498db; /* Яркий синий для заполненной части */
    border-radius: 5px;
}