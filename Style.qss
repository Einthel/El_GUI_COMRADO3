/* =================================================================== */
/*                    1. ОБЩИЕ / БАЗОВЫЕ СТИЛИ                         */
/* =================================================================== */

/* Стиль для основного фона виджетов, от которого наследуются другие */
QWidget {
    background-color: #313841; /* Темно-сине-серый фон */
    color: #ecf0f1; /* Светлый цвет текста для контраста */
}

/* Базовый стиль для всех рамок QFrame */
QFrame {
    background-color: #313841; /* Сплошной серый фон */
    border: 1px solid #2c3e50; /* Рамка в цвет основного фона для создания эффекта глубины */
    border-radius: 10px;       /* Скругление углов */
}

/* Общий стиль для обычных кнопок QPushButton */
QPushButton {
    background-color: #5D6D7E; /* Нейтральный серо-синий фон */
    color: #FFFFFF; /* Чистый белый текст для читаемости */
    border: 1px solid #2c3e50; /* Темная рамка, как у QFrame */
    padding: 8px 16px; /* Внутренние отступы для "воздуха" */
    border-radius: 4px; /* Легкое скругление углов */
    font-size: 11pt;
}

/* Стиль для QPushButton при наведении курсора */
QPushButton:hover {
    background-color: #85929E; /* Более светлый оттенок для обратной связи */
}

/* Общий стиль для кнопок с иконками QToolButton */
QToolButton {
    background-color: #34495e; /* Фон, как у родительской QFrame */
    border: 1px solid #4a627a; /* Слегка заметная рамка для выделения */
    border-radius: 8px; /* Более выраженное скругление для "плиточного" вида */
    padding: 5px; /* Небольшой внутренний отступ */
    font-size: 9pt;
}

/* Стиль для QToolButton при наведении курсора */
QToolButton:hover {
    background-color: #4a627a; /* Акцентный цвет для индикации интерактивности */
}

QToolButton:checked {
    background-color: lightblue; /* Например, другой цвет фона */
    border: 2px solid blue;    /* Например, другая рамка */
}


/* =================================================================== */
/*              2. СТИЛИ ДЛЯ ГЛАВНОГО ОКНА (comrado3.py)                 */
/* =================================================================== */

/* Внешний контейнер страницы (должен быть прозрачным для тени) */
QWidget[objectName^="page_"] {
    background-color: transparent;
}

/* Внутренний фрейм страницы с контентом (имеет фон и скругление) */
QFrame#page_container {
    background-color: #3A4750; /* Фиолетовый фон */
    border-radius: 10px;       /* Скругление углов */
    border: none;              /* Убираем стандартную рамку QFrame */
}

/* Стек-виджет, содержащий страницы (прозрачный, со скруглением для обрезки тени) */
QStackedWidget#Button_stackedWidget,
QStackedWidget#Button_editor_stackedWidget {
    background-color: transparent;
    border: none;
    border-radius: 10px; /* Такое же скругление, как и у дочерних страниц */
}

/* Общий стиль для фреймов на левой панели и в редакторе */
QFrame#Widget_bar_frame,
QFrame#Editor_frame,
QFrame#Page_control_frame,
QFrame#Button_example_layout,
QListWidget#Ready_Button_listWidget {
    background-color: #3A4750; /* Фиолетовый фон */
    border-radius: 10px;       /* Скругление углов */
    border: none;              /* Убираем стандартную рамку QFrame */
}

/* Стиль для кнопок внутри панелей управления (Editor и Page control) */
QFrame#Editor_frame QPushButton,
QFrame#Page_control_frame QPushButton {
    background-color: #34495e; /* Фон, как у родительской QFrame */
    border: 1px solid #4a627a; /* Слегка заметная рамка для выделения */
    border-radius: 5px;
    color: #ecf0f1;              /* Светлый текст */
    padding: 5px;               /* Компактные отступы */
    font-size: 10pt;
}

QFrame#Editor_frame QPushButton:hover,
QFrame#Page_control_frame QPushButton:hover {
    background-color: #4a627a;    /* Светлее при наведении */
}

/* Стиль для "нажатой" кнопки переключения режима */
QPushButton#Change_Button:checked {
    background-color: #4a7a77;    /* Акцентный красный для активного состояния */
    border: 1px solid #355e5b;  /* Более темная красная рамка */
    color: #ffffff;
}

/* Стиль для метки с номером страницы */
QLabel#Current_page_label {
    background-color: #2c3e50;    /* В цвет основного фона приложения */
    border: 1px solid #4a627a;  /* Рамка в цвет ховера кнопок */
    border-radius: 5px;
    color: #ecf0f1;              /* Светлый текст */
    font-size: 10pt;
}


/* =================================================================== */
/*        3. СТИЛИ ДЛЯ ОКНА РЕДАКТОРА КНОПОК (editor.py)               */
/* =================================================================== */

QMainWindow#Editor_Window QPushButton,
QMainWindow#Editor_Window QToolButton {
    background-color: #34495e; /* Фон, как у родительской QFrame */
    border: 1px solid #4a627a; /* Слегка заметная рамка для выделения */
    border-radius: 8px;
    padding: 5px;               /* Компактные отступы */
    font-size: 9pt;
}

QMainWindow#Editor_Window QPushButton:hover,
QMainWindow#Editor_Window QToolButton:hover {
    background-color: #4a627a;    /* Светлее при наведении */
}
QMainWindow#Editor_Window QWidget[objectName^="page_"] {
    background-color: transparent;
}


/* Внутренний фрейм на страницах редактора */
QFrame#Button_frame {
    background-color: #3A4750; /* Фиолетовый фон */
    border-radius: 10px;       /* Скругление углов */
    border: none;              /* Убираем стандартную рамку QFrame */
}

/* Стиль для QLabel в окне редактора */
QMainWindow#Editor_Window QLabel {
    background-color: transparent;
    font-size: 9pt;
    color: #cdd5db;
    border: none; /* Убираем возможную рамку */
}


