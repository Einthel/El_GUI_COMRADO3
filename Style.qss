/* =================================================================== */
/*        6. СТИЛИ ДЛЯ МУЗЫКАЛЬНОГО ПЛЕЕРА (Music_player.py)             */
/* =================================================================== */

/* Основной контейнер виджета плеера */
QWidget#Music_player {
    background-color: #3A4750;
    border-radius: 10px;
    border: 1px solid #2c3e50;
}

/* Все дочерние фреймы делаем прозрачными, чтобы фон контейнера был виден */
QWidget#Music_player QFrame {
    background-color: transparent;
    border: none;
    border-radius: 0;
}

/* Стили для текстовых меток */
QWidget#Music_player QLabel#Artist_label {
    color: #bdc3c7; /* Более светлый серый для исполнителя */
    font-size: 10pt;
}

QWidget#Music_player QLabel#Track_label {
    color: #ecf0f1; /* Яркий белый для названия трека */
    font-size: 12pt;
    font-weight: bold;
}

/* Стили для меток времени */
QWidget#Music_player QLabel#Left_Time_label,
QWidget#Music_player QLabel#Right_Time_label {
    color: #95a5a6; /* Тусклый серый для времени */
    font-size: 8pt;
}

/* Стили для кнопок управления */
QWidget#Music_player QToolButton#Previous_ToolB {
    image: url(icons/System_Icon/prev.png);
    background-color: #5D6D7E;
    border: 1px solid #2c3e50;
    border-radius: 30px; 
    width: 60px;
    height: 60px;
    /*padding: 5px;*/
}
QWidget#Music_player QToolButton#Next_ToolB {
    image: url(icons/System_Icon/next.png);
    background-color: #5D6D7E;
    border: 1px solid #2c3e50;
    border-radius: 30px; 
    width: 60px;
    height: 60px;
    /*padding: 5px;*/
}

/* Стиль для кнопки Play/Pause */
QWidget#Music_player QToolButton#PlayPause_ToolB {
    image: url(icons/System_Icon/Play.png);
    background-color: #5D6D7E;
    border: 1px solid #2c3e50;
    border-radius: 40px; /* Больший радиус для большей кнопки */
    width: 80px;
    height: 80px;
    /*padding: 5px;*/   
}

/* Стили для кнопок при наведении */
QWidget#Music_player QToolButton#Previous_ToolB:hover,
QWidget#Music_player QToolButton#PlayPause_ToolB:hover,
QWidget#Music_player QToolButton#Next_ToolB:hover {
    background-color: #85929E;
    
}

/* Иконка для PlayPause_ToolB в состоянии "checked" (воспроизведение) */
QWidget#Music_player QToolButton#PlayPause_ToolB:checked {
    image: url(icons/System_Icon/Pause.png);
}

/* 2. Вспомогательные кнопки (Лайк, Дизлайк, Случайно, Повтор) */
QWidget#Music_player QToolButton#Like_ToolB,
QWidget#Music_player QToolButton#Dis_ToolB,
QWidget#Music_player QToolButton#Random_ToolB,
QWidget#Music_player QToolButton#Repeat_ToolB {
    background-color: transparent;
    border: 1px solid;
    border-radius: 20px; /* Круглая область для клика */
    width: 40px;
    height: 40px;
}

/* Иконки для кнопок */

/* Лайк */
QWidget#Music_player QToolButton#Like_ToolB {
    image: url(icons/System_Icon/Like_empty.png);
}

/* Дизлайк */
QWidget#Music_player QToolButton#Dis_ToolB {
    image: url(icons/System_Icon/Dislike.png);
}

/* Повтор */
QWidget#Music_player QToolButton#Repeat_ToolB {
    image: url(icons/System_Icon/repeat_off.png);
}

/* Случайный трек */
QWidget#Music_player QToolButton#Random_ToolB {
    image: url(icons/System_Icon/shuffle_off.png);
}

QWidget#Music_player QToolButton#Like_ToolB:hover,
QWidget#Music_player QToolButton#Dis_ToolB:hover,
QWidget#Music_player QToolButton#Random_ToolB:hover,
QWidget#Music_player QToolButton#Repeat_ToolB:hover {
    background-color: rgba(133, 146, 158, 0.5); /* Полупрозрачный фон при наведении */
}

/* 3. Стили для "нажатых" (checked) состояний */

/* Лайк - заливка */
QWidget#Music_player QToolButton#Like_ToolB:checked {
    /*background-color: rgba(231, 76, 60, 0.7); /* Полупрозрачный красный */
    image: url(icons/System_Icon/Like.png);
}

/* Дизлайк */
QWidget#Music_player QToolButton#Dis_ToolB:checked {
